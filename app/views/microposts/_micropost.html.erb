<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size_gravatar), micropost.user %>
  <div class="detail">
    <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
    <span class="content">
      <%= micropost.content %>
      <%= image_tag micropost.picture_url if micropost.picture? %>
    </span>
    <span class="timestamp">
      <%= t "posted" %> <%= time_ago_in_words(micropost.created_at) %> <%= t "ago" %>
      <% if current_user? micropost.user %>
      <%= link_to t("delete"), micropost, method: :delete, data: { confirm: t("are_you_sure") } %>
    <% end %>
  </span>
  </div>
</li>
