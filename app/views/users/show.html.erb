<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3><%= t "microposts" %> (<%= @user.microposts.count %>)</h3>
      <ul class="microposts">
        <%= render @microposts %>
      </ul>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>
