<% provide(:title, t("all_users")) %>
<h1><%= t "all_users" %></h1>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
    <% if current_user.has_attribute?(:admin) && !current_user?(user) %>
      | <%= link_to t("delete"), user, method: :delete, data: { confirm: t("are_you_sure") } %>
    <% end %>
  <% end %>
</ul>
<%= will_paginate %>
