<% provide(:title, t("all_users")) %>
<h1><%= t "all_users" %></h1>

<%= paginate @users %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: Settings.size_gravatar %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to t("delete"), user, method: :delete, data: { confirm: t("are_you_sure") } %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= paginate @users %>
